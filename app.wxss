/**app.wxss**/
@import './assets/css/iconfont.wxss';

page{
	width: 100%;
	min-height: 100%;
	font-size: 28rpx;
}
.container {
	width: 100%;
	height: 100%;
} 
.clearfix:after, 
.clearfix:before {             
	content: ""; display: table; 
} 
.clearfix:after{ 
	clear: both; 
}
button:after{
	border: none;
}
.form-btn{
	width: 100%;
	box-sizing: border-box;
}
.form-btn .in-btn{
	width: 100%;
	background: #15CEBC;
	color: #FFFFFF;
}
.fl{
	float: left;
}
.fr{
	float: right;
}
input{
	min-height: 0;
}
.my-info{
	position: fixed;
	width: 100%;
	border: none;
	background: transparent;
	height: 100vh;
	top: 0;
	left: 0;
	padding: 0;
	z-index: 10000;
}
.nodata{
	width: 50%;
	margin: 0 auto;
	padding-top: 160rpx;
	text-align: center;
}
.nodata image{
	display: block;
	width: 100%;
}
.nodata text{
	display: block;
	padding-top: 20rpx;
	color: #888888;
}