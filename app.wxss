/**app.wxss**/
@import './assets/css/iconfont.wxss';

page{
	width: 100%;
	min-height: 100%;
	font-size: 28rpx;
}
.container {
	width: 100%;
	height: 100%;
} 
.clearfix:after, 
.clearfix:before {             
	content: ""; display: table; 
} 
.clearfix:after{ 
	clear: both; 
}
button:after{
	border: none;
}
.form-btn{
	width: 100%;
	box-sizing: border-box;
}
.form-btn .in-btn{
	width: 100%;
	background: #15CEBC;
	color: #FFFFFF;
}
.fl{
	float: left;
}
.fr{
	float: right;
}
input{
	min-height: 0;
}
.my-info{
	position: fixed;
	width: 100%;
	border: none;
	background: transparent;
	height: 100vh;
	top: 0;
	left: 0;
	padding: 0;
	z-index: 10000;
}
.nodata{
	width: 50%;
	margin: 0 auto;
	padding-top: 160rpx;
	text-align: center;
}
.nodata image{
	display: block;
	width: 100%;
}
.nodata text{
	display: block;
	padding-top: 20rpx;
	color: #888888;
}
.nav-header-title{
	width: 100%;
	background: #0CCCBB;
	position: fixed;
	left: 0;
	right: 0;
	z-index: 10000;
	overflow: hidden;
}
.nav-header-title .title-nav-com{
	width: 100%;
	height: 44px;
	line-height: 44px !important;
	text-align: center;
	color: #FFFFFF;
	font-size:32rpx;
}
.nav-header-title .title-nav-com .tit{
	display: block;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	padding: 0 150rpx;
	display: -webkit-box !important;
	 word-break: break-all; 
	 text-overflow: ellipsis; 
	 overflow: hidden; 
	 -webkit-box-orient: vertical; 
	 -webkit-line-clamp:1;
}
.nav-header-title .nav-back{
	position: absolute;
	height: 44px;
	left: 0;
	box-sizing: border-box;
}
.nav-header-title .nav-back .icon{
	padding: 20rpx;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	color: #FFFFFF;
	font-size:32rpx;
}
.navigator-back{
	position: fixed;
	left: 10px;
	width: 30px;
	height: 30px;
	background: rgba(0,0,0,0.4);
	line-height: 30px;
	text-align: center;
	border-radius: 50%;
	z-index: 10000;
}
.navigator-back navigator text{
	color: #FFFFFF;
	font-size:32rpx;
}
.nav-header-title .nav-home .icon{
	font-size: 20px;
}
.loading {
	background:transparent;
	font-size:28rpx;
	color:#666666;
	margin:30rpx 0 10rpx;
}