page{
	background: #F5F5F5;
}
.header-top{
	width: 100%;
	padding-top: 20rpx;
}
.header-line{
	width: 100%;
	position: relative;
	background: #FFFFFF;
}
.header-line .img{
	position: absolute;
	width: 100%;
	height: 10rpx;
	top: 0;
	left: 0;
}
.header-cont-txt{
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	padding: 0 30rpx;
}
.header-cont-txt .tit{
	font-size: 32rpx;
	font-weight: 900;
	line-height: 32rpx;
	padding-top: 30rpx;
	padding-bottom: 20rpx;
}
.header-cont-txt .txt{
	font-size: 22rpx;
	line-height: 22rpx;
	padding-bottom: 20rpx;
}
.header-cont-txt .icon{
	position: absolute;
	right: 30rpx;
	font-size: 32rpx;
	color: #666666;
	top: 50%;
	transform: translateY(-45%);
}
.content-mak{
	width: 100%;
	padding: 90rpx 30rpx 0;
	box-sizing: border-box;
}
.content-mak .ipt{
	width: 100%;
	height: 90rpx;
	background: #FFFFFF;
	line-height: 90rpx;
	text-align: center;
	border-radius: 12rpx;
	margin-bottom: 30rpx;
	box-sizing: border-box;
	padding: 0 30rpx;
}
.content-mak .ipt input{
	width: 100%;
	height: 100%;
}