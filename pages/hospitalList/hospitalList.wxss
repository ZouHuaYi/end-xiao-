page{
	background: #f2f2f2;
}
.container{
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
}
.header-line{
	display: block;
	width: 100%;
	height: 10rpx;
}
.search-text{
	width: 100%;
	padding: 10rpx 30rpx 20rpx;
	box-sizing: border-box;
	background: #03D0BC;
	display: flex;
	justify-content: space-around;
}
.search-input{
	width: 86%;
	padding: 0 20rpx;
	box-sizing: border-box;
	background: #FFFFFF;
	border-radius: 0.7rem;
}
.h-top{
	width: 100%;
	background: #FFFFFF;
}
.h-top .nav-list{
	width: 100%;
	padding: 18rpx 30rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}
.h-top .nav-list text{
	font-size: 28rpx;
	line-height: 28rpx;
	padding: 14rpx 48rpx;
	border-radius: 40rpx;
}
.h-top .nav-list text.on{
	color: #FFFFFF;
	background: #0CCCBB;
}
.h-top .sec-list text.on{
	color: #14cfbc;
}
.sec-list{
	width: 100%;
	width: 100%;
	padding: 18rpx 0;
	box-sizing: border-box;
	border-top: 1px solid #EFEFEF;
}
.sec-list text{
	font-size: 28rpx;
	line-height: 28rpx;
	display: inline-block;
	position: relative;
	padding: 0 30rpx;
}
.sec-list text:after{
	position: absolute;
	content: " ";
	height: 28rpx;
	top: 0;
	right: 0;
	border-right: 1px solid #EFEFEF;
}
.hospital-list{
	width: 100%;
	flex: 1;
	overflow: hidden;
	background-color: #FFFFFF;
}
.hospital-content{
	width: 100%;
	background-color: #FFFFFF;
}
.hospital-item{
	display: flex;
	flex-direction: row;
	box-sizing: border-box;
	padding: 26rpx 20rpx;
}
.hospital-item .item-left{
	width: 156rpx;
	height: 120rpx;
}
.hospital-item .item-left image{
	display: block;
	width: 100%;
	height: 100%;
	background-color: #FFFFFF;
}
.hospital-item .item-right{
	margin-left: 30rpx;
	flex: 1;
	position: relative;
}
.hospital-item .item-right .txt{
	font-size: 26rpx;
	padding-top: 10rpx;
	width: 100%; 
	display: -webkit-box !important; 
	word-break: break-all; 
	text-overflow: ellipsis; 
	overflow: hidden; 
	-webkit-box-orient: vertical; 
	-webkit-line-clamp:2;
}
.hospital-item .item-right .item-icon{
	position: absolute;
	right: 0;
	bottom: 0;
	font-size: 20rpx;
	color: #666666;
}
.hospital-item .item-right .item-icon .icon{
	font-size: 24rpx;
	vertical-align: middle;
	color: #666666;
}