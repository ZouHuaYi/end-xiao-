page{
	background: #f2f2f2;
}
.search-text{
	width: 100%;
	padding: 10rpx 30rpx 20rpx;
	box-sizing: border-box;
	background: #03D0BC;
	display: flex;
	justify-content: space-around;
}
.search-input{
	width: 80%;
	padding: 0 20rpx;
	box-sizing: border-box;
	background: #FFFFFF;
	border-radius: 0.7rem;
}
.h-top{
	width: 100%;
	background: #FFFFFF;
}
.h-top .nav-list{
	width: 100%;
	padding: 18rpx 30rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: row;
	justify-content:space-between;
}
.h-top .nav-list text{
	font-size: 28rpx;
	line-height: 28rpx;
	padding: 14rpx 48rpx;
	border-radius: 40rpx;
}
.h-top .nav-list text.on{
	color: #FFFFFF;
	background: #0CCCBB;
}
.sec-list{
	width: 100%;
	width: 100%;
	padding: 18rpx 0;
	box-sizing: border-box;
	border-top: 1px solid #EFEFEF;
}
.sec-list text{
	font-size: 28rpx;
	line-height: 28rpx;
	display: inline-block;
	position: relative;
	padding: 0 30rpx;
}
.sec-list text:after{
	position: absolute;
	content: " ";
	height: 28rpx;
	top: 0;
	right: 0;
	border-right: 1px solid #EFEFEF;
}