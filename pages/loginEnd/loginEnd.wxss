.cont-pages{
	width: 100%;
	background: #F4F4F4;
	padding: 30rpx 0;
}
.form-row{
	width: 100%;
	background: #FFFFFF;
	position: relative;
	box-sizing: border-box;
	padding: 26rpx 30rpx;
	border-bottom: 1px solid #F4F4F4;
	display: flex;
}
.form-row .input{
	display: flex;
	flex: 1;
	font-size: 32rpx;
}
.form-row .btn{
	color: #FFFFFF;
	background: #15CEBC;
}
.form-row .btn.on{
	opacity: 0.5;
}
.tip-box{
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 30rpx 30rpx;
	font-size: 24rpx;
	line-height: 34rpx;
	text-align: justify;
	color: #969696;
}
.tip-box .vip{
	color: #15CEBC;
}
.form-btn{
	padding: 0 30rpx;
}