.cont-page{
	width: 100%;
}
.banner-list{
	width: 100%;
	height: 760rpx;
}
.banner-list swiper-item image{
	display: block;
	width: 100%;
}
.cont-nav{
	width: 100%;
	box-sizing: border-box;
	padding: 0 30rpx;
}
.nav-list{
	width: 100%;
	display: flex;
	padding: 46rpx 0;
	border-bottom: 1px solid #EFEFEF;
}
.nav-item{
	flex: 1;
	text-align: center;
}
.nav-item image{
	display: block;
	width: 70rpx;
	height: 70rpx;
	margin: 0 auto;
}
.nav-item text{
	display: block;
	font-size: 24rpx;
	line-height: 24rpx;
	padding-top: 22rpx;
}
.hospital-list{
	width: 100%;
	box-sizing: border-box;
	padding: 45rpx 30rpx;
}
.hosp-title{
	padding-left: 30rpx;
	position: relative;
	font-size: 28rpx;
	line-height: 30rpx;
}
.hosp-title:before{
	position: absolute;
	content: " ";
	left: 0;
	top: 0;
	height: 30rpx;
	border-left: 4px solid #14cebc;
	border-radius: 2px;
}
.hospital-content{
	width: 100%;
	background-color: #FFFFFF;
	padding-top: 30rpx;
}
.hospital-item{
	display: flex;
	flex-direction: row;
	box-sizing: border-box;
	padding: 26rpx 0;
	border-bottom: 1px solid #EFEFEF;
	
}
.hospital-item:last-child{
	border-bottom: none;
}
.hospital-item .item-left{
	width: 156rpx;
	height: 120rpx;
}
.hospital-item .item-left image{
	display: block;
	width: 100%;
	height: 100%;
	background-color: #FFFFFF;
}
.hospital-item .item-right{
	margin-left: 30rpx;
	flex: 1;
	position: relative;
}
.hospital-item .item-right .txt{
	font-size: 26rpx;
	padding-top: 10rpx;
	width: 100%; 
	display: -webkit-box !important; 
	word-break: break-all; 
	text-overflow: ellipsis; 
	overflow: hidden; 
	-webkit-box-orient: vertical; 
	-webkit-line-clamp:2;
}
.hospital-item .item-right .item-icon{
	position: absolute;
	right: 0;
	bottom: 0;
	font-size: 20rpx;
	color: #666666;
}
.hospital-item .item-right .item-icon .icon{
	font-size: 24rpx;
	vertical-align: middle;
	color: #666666;
}