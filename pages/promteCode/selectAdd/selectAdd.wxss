page{
	width: 100%;
	height: 100vh;
	background: #0CCCBB;
}
.container{
	width: 100%;
	height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
}
.select-project{
	width: 80%;
	height: 90%;
	background: #FFFFFF;
	border-radius: 24rpx;
	box-sizing: border-box;
	padding: 40rpx 40rpx;
	display: flex;
	flex-direction: column;
}
.select-content{
	flex: 1;
	width: 100%;
	height: 100%;
	overflow-y: auto;
}
.form-btn{
	padding-top: 30rpx;
	padding-bottom: 20rpx;
}
.select-list{
	width: 100%;
	margin-bottom: 20rpx;
}
.list-title{
	position: relative;
	font-size: 28rpx;
	line-height: 32rpx;
	margin-bottom: 20rpx;
}
.list-title .add{
	position: absolute;
	right: 0;
	line-height: 32rpx;
	background: #FFFFFF;
	padding: 0;
	font-size: 24rpx;
	color: #00CEBA;
}
.list-item{
	padding: 0 10rpx;
	box-sizing: border-box;
}
.list-item .item{
	width: 100%;
	border-bottom: 1px solid #F0F0F0;
	border-top: 1px solid #F0F0F0;
	padding: 10rpx 0;
	position: relative;
}
.list-item .item.on{
	background: #d5fffb;
}
.list-item .item .item-left{
	width: 70%;
	word-break: break-all;
	font-size: 24rpx;
	line-height: 36rpx;
}
.list-item .item .price{
	position: absolute;
	right: 0;
	top: 10rpx;
	font-size: 24rpx;
	color: #666666;
}
.list-item .item .price text{
	font-size: 28rpx;
	color: #00CEBA;
}
.project-add-finish{
	position: fixed;
	top:0;
	left: 0;
	width: 100%;
	height: 100vh;
	z-index: 10000;
}
.mask{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.5);
}
.alert-finish{
	position: absolute;
	width: 70%;
	background: #FFFFFF;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
}
.alert-tit{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 32rpx;
	background: #fcfcfc;
	margin-bottom: 10rpx;
}
.alert-input{
	padding: 16rpx 45rpx;
}
.alert-input input{
	width: 100%;
	height: 70rpx;
	background: #ececee;
	box-sizing: border-box;
	padding: 0 10rpx;
	border-radius: 5rpx;
}
.alert-btn{
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 45rpx 30rpx;
	overflow: hidden;
}
.alert-btn .fl{
	box-sizing: border-box;
	border:1px solid #cccccc;
	background: #FFFFFF;
}
.alert-btn .fr{
	background: #14CCBA;
	color: #FFFFFF;
}