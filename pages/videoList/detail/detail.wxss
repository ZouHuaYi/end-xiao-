.video-content{
	width: 100%;
	height: 100vh;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.video-list-container{
	width: 100%;
	height: 100%;
}
.video-page{
	width: 100%;
	height: 422rpx;
}
.video-page .video{
	display: block;
	width: 100%;
	height: 100%;
}
.scroll-box{
	width: 100%;
	padding-bottom: 80rpx;
}
.header{
	width: 100%;
	padding: 30rpx 28rpx 30rpx;
	box-sizing: border-box;
}
.title{
	font-size: 36rpx;
	color: #000000;
	overflow: hidden;
	line-height: 36rpx;
}
.title .tab{
	display: inline-block;
	background: #f0fffc;
	font-size: 24rpx;
	height: 36rpx;
	padding: 0 20rpx;
	line-height: 36rpx;
	color: #14cebc;
	vertical-align: top;
	border-radius: 14rpx;
}
.title .iconfont{
	font-size: 36rpx;
	margin-left: 40rpx;
	color: #666666;
}
.sec-data{
	padding-top: 22rpx;
}
.sec-data text{
	font-size: 24rpx;
	line-height: 24rpx;
	margin-right: 30rpx;
}
.line{
	width: 100%;
	height: 10rpx;
	background: #F0F0F0;
}
.video-box{
	flex: 1;
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: relative;
}
.nav-introduce,.float-top{
	width: 100%;
	height: 86rpx;
	box-sizing: border-box;
	border-bottom: 1rpx solid #F0F0F0;
	line-height: 86rpx;
	display: flex;
	justify-content:space-around;
	background: #FFFFFF;
}
.nav-introduce.on{
	opacity: 0;
}
.nav-introduce text,.float-top text{
	display: inline-block;
	color: #999999;
	position: relative;
}
.float-top{
	position: absolute;
	top: 0;
	left: 0;
	background: #FFFFFF;
	z-index: 10000;
}
.nav-introduce text.on:after,.float-top text.on:after{
	position: absolute;
	content: " ";
	width: 100%;
	bottom: 0;
	left: 0;
	border-bottom: 7rpx solid #14CCBA;
}
.tab-content{
	width: 100%;
	padding: 30rpx;
	box-sizing: border-box;
}
.tab-one .one{
	font-size: 28rpx;
	line-height: 44 rpx;
	padding-bottom: 30rpx;
}
.tab-tow{
	text-indent: 56rpx;
	line-height: 44rpx;
	font-size: 28rpx;
}
.user-comments{
	width: 100%;
	margin-bottom: 40rpx;
}
.user-logo{
	display: block;
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.user-header {
	display: flex;
}
.user-tit{
	flex: 1;
	margin-left: 30rpx;
}
.header-tit{
	position: relative;
	width: 100%;
	height: 80rpx;
	margin-bottom: 10rpx;
}
.header-tit .tit{
	font-size: 28rpx;
	line-height: 28rpx;
	padding: 16rpx 0 10rpx;
	font-weight: 700;
}
.header-tit .date{
	font-size: 24rpx;
	line-height: 24rpx;
	color: #8d8d8d;
}
.header-tit .right{
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	color: #666666;
	font-size: 28rpx;
}
.user-comments-text{
	font-size: 28rpx;
	line-height: 44rpx;
}
.title-introduce{
	width: 100%;
	height: 85rpx;
	line-height: 85rpx;
	border-bottom: 1px solid #F0F0F0;
	box-sizing: border-box;
	padding: 0 30rpx;
	font-size: 28rpx;
	font-weight: 800;
}
.spa-content{
	width: 100%;
	box-sizing: border-box;
	padding: 20rpx 30rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	border-bottom: 1px solid #F0F0F0;
}
.spa-comments{
	width: 100%;
	box-sizing: border-box;
	font-size: 28rpx;
	font-weight: 800;
	padding: 30rpx 35rpx;
}
.comments-input{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 110rpx;
	padding: 20rpx 30rpx;
	box-sizing: border-box;
	background: #FFFFFF;
	z-index: 1000;
	border-top: 1px solid rgba(239,239,239,0.5);
}
.comments-input input{
	display: block;
	width: 100%;
	height: 70rpx;
	background: #f5f5f5;
	border-radius: 40rpx;
	box-sizing: border-box;
	padding: 0 40rpx;
	font-size: 28rpx;
}