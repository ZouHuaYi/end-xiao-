.video-page{
	width: 100%;
	height: 100vh;
	display: flex;
	box-sizing: border-box;
	flex-direction: column;
}
.video-nav{
	width: auto;
	height: 40px;
	white-space: nowrap;
	border-bottom: 1px solid #F0F0F0;
}
.nav-box{
	width: auto;
	white-space:nowrap;
}
.nav-btn{
	display: inline-block;
	vertical-align: top;
	height: 100%;
	padding: 0 20rpx;
	line-height: 40px;
	color: #898a8f;
}
::-webkit-scrollbar{
	width: 0;
	height: 0;
	color: transparent;
}
.nav-btn.active{
	color: #050c1c;
	position: relative;
}
.nav-btn.active::after{
	content: " ";
	position: absolute;
	width: 100%;
	border-bottom: 2px solid #6dc3c2;
	left: 0;
	bottom: 0;
}
.video-list{
	flex: 1;
	width: 100%;
	height: 100%;
	overflow: hidden;
	box-sizing: border-box;
}
.video-box{
	width: 100%;
	padding: 30rpx 28rpx 0;
	box-sizing: border-box;
}
.video-item{
	width: 100%;
	border-radius: 5px;
	padding-bottom: 40rpx;
	border-bottom: 1px solid #F0F0F0;
	margin-bottom: 60rpx;
}
.video{
	width: 100%;
	height: 396rpx;
	position: relative;
}
.video .vbox{
	width: 100%;
	height: 100%;
}
.video image,.video video{
	display: block;
	width: 100%;
	height: 100%;
}
.video .play{
	position: absolute;
	font-size: 60px;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	color: rgba(0,0,0,.6)
}
.video-item .tip{
	font-size: 30rpx;
	padding: 10rpx 0 20rpx;
	color: #666666;
}
.video-item .eay{
	width: 100%;
	height: 30rpx;
	font-size: 24rpx;
}
.video-item .icon{
	font-size: 14px;
	margin-right: 1px;
}
.video-item .eay view.cn{
	margin-right: 40rpx;
}
.icon-yanjing{
	color: #69c3c3;
}
.icon-xinxi{
	color: #ffb8d6;
}
.icon-aixin{
	color: #9bc1ff;
}